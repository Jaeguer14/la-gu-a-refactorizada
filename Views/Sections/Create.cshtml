@model AppMovie.Models.Section

@{
    Layout = "_Layout";
}

<!DOCTYPE html>

<html>

<head>
    <meta name="viewport" content="width=device-width" />
    <title>Crear</title>
</head>

<body>

    <h4>Seccion</h4>
    <hr />
    <div class="fondotabla">
    <div class="row">
        <div class="col-md-4 ">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="SectionName" class="control-label"></label>
                    <input asp-for="SectionName" class="form-control mb-3"
                        onkeyup="this.value = this.value.toUpperCase()" />
                    <span asp-validation-for="SectionName" class="text-danger"></span>
                </div>
                <div >
                    <div class="form-group">
                
                            <input type="submit" value="Crear" class=" btn boton4 mb-3" />
                        
                        
                    </div>
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index" class="btn botonv mb-3">Volver</a>
    </div>
</div>

</body>

</html>
