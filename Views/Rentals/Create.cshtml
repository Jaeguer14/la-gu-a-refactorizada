@model AppMovie.Models.Rental

@{
    Layout = "_Layout";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Crear</title>
</head>
<body>  
    <!-- Button trigger modal -->
  <button type="button" class="btn btn-primary mb-3" data-bs-toggle="modal" data-bs-target="#staticBackdrop">
  Nose que poner
  </button>

  <!-- Modal -->
  <div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1"
    aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="staticBackdropLabel">Modal</h5>
          @* <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button> *@
        </div>
        <div class="modal-body">
          <select class="form-control" id="MovieID" asp-items="ViewBag.MovieID"></select>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn btn-outline-primary" data-bs-dismiss="modal">Cerrar</button>
          <button type="button" class="btn btn btn-outline-primary" onclick="AddMovieTemp();">Agregar</button>
        </div>
      </div>
    </div>
  </div>

<h4>Alquiler</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="RentalDate" class="control-label"></label>
                <input asp-for="RentalDate" class="form-control" />
                <span asp-validation-for="RentalDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PartnerID" class="control-label"></label>
                <select asp-for="PartnerID" class ="form-control mb-3" asp-items="ViewBag.PartnerID"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Finalizar Alquiler" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-primary">Volver</a>
            </div>
        </form>
    </div>
</div>
 <br>

<table class="table">
    <thead>
        <tr>
            <th>Titulo de la pelicula</th>
            <th>
<button type="button" class="btn-model" data-bs-toggle="modal" data-bs-target="#staticBackdrop">
  Agregar Peliculas
</button></th>
        </tr>
    </thead>
    <tbody>
@* @foreach (var item in Model) {
        <tr>
            <td>
                <a>Eliminar</a>
            </td>
        </tr>
} *@
    </tbody>
</table>

<script>
function AddMovieTemp() {
    //console.log("Guarda la pelicula");
    var movieID = $('#MovieID').val(); //con json busca el elemento que se llame MovieID

    $.ajax({
        type: "POST", //cuando queremos guardar informacion
        url: '../../Rentals/AddMovieTemp',
        data: {MovieID: movieID}, //puede estar vacio o no
        success: function(resultado) {
          if(resultado == true){
            $('#staticBackdrop').modal('hide');

            SearchMovieTemp();

            location.href = "../../Rentals/Create";


          }
          else {
            alert("No se pudo agregar");
          }
        },
        error: function(result){
          console.log("Error debido a: " + result);
        }
    });
  }
</script>

</body>
</html>
