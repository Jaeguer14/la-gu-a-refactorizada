@model IEnumerable<AppMovie.Models.Producer>

@{
    Layout = "_Layout";
}

<!DOCTYPE html>

<html>

<head>
    <meta name="viewport" content="width=device-width" />
    <title>Productora</title>
</head>

<body>
    <p>
        <a asp-action="Create" class="btn btn-secondary">Crear Nuevo</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.ProducerName)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.ProducerName)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.ProducerID" class="btn btn-success">Editar</a> |
                        @* <a asp-action="Details" asp-route-id="@item.ProducerID">Detalles</a> | *@
                        <a onclick="eliminarProductora(@item.ProducerID);" class="btn btn-danger">Eliminar</a>
                    </td>
                </tr>

                <script>function eliminarProductora(id) {
                        console.log(id);
                        var eliminar = confirm("Est√° seguro de eliminar esta seccion?");
                        if (eliminar) {
                            location.href = "../../Producers/DeleteConfirmed/" + id;
                        }
                    }
                </script>
            }

        </tbody>
    </table>
</body>

</html>
